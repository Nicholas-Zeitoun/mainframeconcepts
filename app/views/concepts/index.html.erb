<div class="row">
  <div class="col-12 col-md-8">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-12 d-flex align-items-center justify-content-between">
        <h1>Concepts</h1>
        <div>
          <%= link_to 'New Concept', new_concept_path %> |
          <%= link_to 'Back', concepts_path %>
        </div>
      </div>
    </div>
    <hr>
    <div class="card-deck">
      <% @concepts.each do |concept| %>
        <div class="card bg-light mb-3" style="max-width: 18rem;">
          <div class="card-header"><%= link_to concept.title, concept %></div>
          <div class="card-body">
            <p class="card-text"><%= link_to 'Edit', edit_concept_path(concept) %></p>
            <p class="card-text"><%= link_to 'Destroy', concept, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>


